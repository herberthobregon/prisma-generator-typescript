{
	"name": "@snelx/prisma-generator-typescript-schema",
	"version": "1.3.0",
	"description": "Generate zero-dependency Typescript interfaces from Prisma schema",
	"author": "Herberth Obreg√≥n",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/herberthobregon/prisma-generator-typescript-schema"
	},
	"type": "module",
	"main": "dist/generator.js",
	"files": [
		"dist"
	],
	"bin": {
		"prisma-generator-typescript-schema": "dist/generator.js"
	},
	"scripts": {
		"build": "tsc -p tsconfig.build.json",
		"dev": "tsc -p tsconfig.build.json -w",
		"postbuild": "node -e \"g='dist/generator.js';f=require('fs');f.writeFileSync(g,'#!/usr/bin/env node\\n'+f.readFileSync(g))\"",
		"clean": "rimraf --glob dist **/__TEST_TMP__",
		"generate": "prisma generate --schema=prisma/example.prisma",
		"lint": "prettier --check . && eslint . && echo 'Linting complete.'",
		"lint:fix": "prettier --write . && eslint . --fix && echo 'Linting complete.'",
		"test": "node --loader ts-node/esm test.ts",
		"prepare": "node .husky/install.mjs"
	},
	"dependencies": {
		"@prisma/generator-helper": "^5.22.0"
	},
	"devDependencies": {
		"@eslint/js": "^9.15.0",
		"@prisma/client": "^5.22.0",
		"@snelx/prettier-plugin-import-sort": "^1.0.0",
		"@types/eslint__js": "^8.42.3",
		"@types/node": "^22.10.0",
		"@types/pg": "^8.11.10",
		"eslint": "^9.15.0",
		"eslint-config-prettier": "^9.1.0",
		"husky": "^9.1.7",
		"pg": "^8.13.1",
		"prettier": "^3.4.1",
		"prisma": "^5.22.0",
		"rimraf": "^6.0.1",
		"ts-node": "^10.9.2",
		"typescript": "^5.7.2",
		"typescript-eslint": "^8.16.0",
		"zod": "^3.25.76"
	},
	"importSort": {
		".js, .mjs, .cjs, .ts, .tsx, .mts": {
			"style": "module",
			"parser": "typescript"
		}
	},
	"keywords": [
		"prisma",
		"generator",
		"typescript",
		"interface",
		"json",
		"dto"
	]
}
